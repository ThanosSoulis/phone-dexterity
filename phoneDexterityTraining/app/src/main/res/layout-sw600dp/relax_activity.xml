<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/relaxing_bg"
    android:orientation="vertical"
    android:weightSum="13">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="3"
        >
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/relaxLineX"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="3"
        >
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/relaxLineY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="3"
        >
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/relaxLineZ"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal"
                    android:weightSum="7">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/historyGesture3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/relaxing_x_star_half" />
                        <TextView
                            android:id="@+id/historySpeed3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="52dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="38dp"
                            android:text="9"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/historyScore3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="52dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="32dp"
                            android:text="9"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_weight="2"
                        >

                        <ImageView
                            android:id="@+id/historyGesture2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/relaxing_x_circle" />

                        <TextView
                            android:id="@+id/historySpeed2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="52dp"
                            android:layout_marginBottom="38dp"
                            android:text="9"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/historyScore2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="52dp"
                            android:layout_marginTop="35dp"
                            android:text="9"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/historyRep2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:text="5"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="30dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_weight="2"
                        >
                        <ImageView
                            android:id="@+id/historyGesture1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/relaxing_y_circle"/>

                        <TextView
                            android:id="@+id/historySpeed1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="52dp"
                            android:layout_marginBottom="38dp"
                            android:text="9"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/historyScore1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="52dp"
                            android:layout_marginTop="35dp"
                            android:text="9"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/historyRep1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:text="5"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="30dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_weight="2"
                        >

                        <ImageView
                            android:id="@+id/currentGesture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/relaxing_z_star" />

                        <TextView
                            android:id="@+id/currentSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="52dp"
                            android:layout_marginBottom="38dp"
                            android:text="9"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/currentScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="35dp"
                            android:layout_marginRight="52dp"
                            android:text="9"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/currentRep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:text="5"
                            android:textAlignment="center"
                            android:textColor="#fff"
                            android:textSize="30dp" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/relaxText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif-medium"
                    android:textAlignment="center"
                    android:textColor="#52BFEF"
                    android:textSize="30dp" />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
